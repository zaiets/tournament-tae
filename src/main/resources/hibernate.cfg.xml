<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tournament_tae</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hbm2ddl.auto">validate</property>
        <mapping class="models.entity.basic.Kup"/>
        <mapping class="models.entity.basic.School"/>
        <mapping class="models.entity.basic.Tournament"/>
        <mapping class="models.entity.basic.Trainer"/>
        <mapping class="models.entity.basic.WeightCategory"/>
        <mapping class="models.entity.competition.Discipline"/>
        <mapping class="models.entity.competition.Sparrer"/>
        <mapping class="models.entity.competition.Dojang"/>
        <mapping class="models.entity.competition.Event"/>
        <mapping class="models.entity.competition.SparringEvent"/>
    </session-factory>

</hibernate-configuration>